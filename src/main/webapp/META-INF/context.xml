<?xml version="1.0" encoding="UTF-8"?>
<Context path="/web.security" debug="0" privileged="true">
  <Logger className="org.apache.catalina.logger.FileLogger"
                prefix="localhost_web_security_log." suffix=".txt"
                timestamp="true"/>
  <Realm className="org.apache.catalina.realm.JDBCRealm"
               connectionName="kodecamp" connectionPassword="kodecamp"
               connectionURL="jdbc:h2:tcp://localhost/~/collegewebappdb" debug="99"
               driverName="org.h2.Driver"
               userTable="USERS" userNameCol="USERNAME" userCredCol="PASSWORD"
               userRoleTable="ROLES" roleNameCol="ROLE_NAME"/>
</Context>
